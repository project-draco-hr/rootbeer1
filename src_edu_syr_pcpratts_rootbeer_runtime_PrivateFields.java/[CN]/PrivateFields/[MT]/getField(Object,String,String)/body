{
  try {
    Class cls=Class.forName(cls_name);
    Field[] fields=cls.getDeclaredFields();
    for (    Field field : fields) {
      System.out.println("field: " + cls_name + " "+ field.toString());
    }
    Field f=cls.getDeclaredField(name);
    f.setAccessible(true);
    return f;
  }
 catch (  Exception ex) {
    ex.printStackTrace();
    return null;
  }
}
