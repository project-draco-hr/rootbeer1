{
  Context context=createDefaultContext();
  ThreadConfig thread_config=getThreadConfig(work,context.getDevice());
  try {
    context.setThreadConfig(thread_config);
    context.setKernel(work.get(0));
    context.setUsingHandles(true);
    context.buildState();
    context.run(work);
  }
 catch (  Exception ex) {
    context.close();
  }
}
