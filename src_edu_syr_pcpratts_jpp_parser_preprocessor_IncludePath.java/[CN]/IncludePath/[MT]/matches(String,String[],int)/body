{
  File f=new File(folder);
  File[] files=f.listFiles();
  for (  File file : files) {
    if (file.getName().equals(tokens[index]) == false)     continue;
    if (index == tokens.length - 1) {
      if (file.isFile()) {
        return file;
      }
 else {
        return null;
      }
    }
 else {
      if (file.isDirectory()) {
        return matches(file.getAbsolutePath(),tokens,index + 1);
      }
 else {
        return null;
      }
    }
  }
  return null;
}
