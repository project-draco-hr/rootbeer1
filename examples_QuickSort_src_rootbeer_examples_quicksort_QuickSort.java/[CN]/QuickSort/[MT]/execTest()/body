{
  Stopwatch watch1=new Stopwatch();
  watch1.start();
  sortGPU();
  watch1.stop();
  Stopwatch watch2=new Stopwatch();
  watch2.start();
  sortCPU();
  watch2.stop();
  System.out.println();
  System.out.println("gpu time: " + watch1.elapsedTimeMillis());
  System.out.println("cpu time: " + watch2.elapsedTimeMillis());
}
