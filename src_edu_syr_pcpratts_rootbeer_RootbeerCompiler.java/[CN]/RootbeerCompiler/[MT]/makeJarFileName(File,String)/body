{
  try {
    String abs_path=f.getAbsolutePath() + File.separator;
    folder=folder.replace("\\","\\\\");
    String[] tokens=abs_path.split(folder);
    String ret=tokens[1];
    if (File.separator.equals("\\")) {
      ret=ret.replace("\\","/");
    }
    return ret;
  }
 catch (  Exception ex) {
    throw new RuntimeException(ex);
  }
}
