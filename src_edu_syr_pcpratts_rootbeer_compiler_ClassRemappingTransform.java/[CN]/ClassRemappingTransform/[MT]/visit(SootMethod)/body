{
  Body body=RootbeerScene.v().getBody(method);
  if (body == null)   return;
  fixArguments(method);
  Iterator<Unit> iter=body.getUnits().iterator();
  while (iter.hasNext()) {
    Unit curr=iter.next();
    List<ValueBox> boxes=curr.getUseAndDefBoxes();
    for (    ValueBox box : boxes) {
      Value value=box.getValue();
      value=mutate(value);
      box.setValue(value);
    }
  }
}
